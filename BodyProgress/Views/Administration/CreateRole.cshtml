@model CreateRoleViewModel

@{ 
    ViewBag.Title = "Create New Role";
}

<h1>Utwórz nową rolę w systemie</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="form-group"> 
                <input asp-for="RoleName"/>
            </div>
            <button type="submit" class="btn btn-primary">Dodaj Role</button>
        </form>
    </div>
</div>